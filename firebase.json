{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "site": "kairos-webapp-4de65",
    "source": ".",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "runtime": "nodejs20",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "pnpm --dir \"$RESOURCE_DIR\" run lint",
        "pnpm --dir \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 3001
    },
    "functions": {
      "port": 3002
    },
    "firestore": {
      "port": 3003
    },
    "hosting": {
      "port": 3004
    },
    "storage": {
      "port": 3005
    },
    "ui": {
      "enabled": true,
      "port": 3006
    },
    "singleProjectMode": true
  }
}
